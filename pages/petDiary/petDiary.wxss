page {
  height: 100%;
}
.pet-diary-page {
  height: 100%;
}
.pet-diary-page .no-content {
  padding-top: 250rpx;
  text-align: center;
}
.pet-diary-page .no-content image {
  width: 350rpx;
  height: 350rpx;
  display: block;
  margin: 40rpx auto;
}
.pet-diary-page .no-content .no-text {
  width: 400rpx;
  margin: 0 auto;
  font-size: 32rpx;
  color: #424242;
}
.pet-diary-page .diary-content-wrap {
  height: 100%;
  padding-top: 480rpx;
  background: linear-gradient(180deg, #fff1df 0%, #ffe5c2 100%);
}
.pet-diary-page .diary-content-wrap .headings {
  width: 100%;
  height: 160rpx;
  text-align: center;
  overflow-x: scroll;
  padding: 220rpx 0 60rpx;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9;
}
.pet-diary-page .diary-content-wrap .headings .heading {
  display: inline-block;
  width: 140rpx;
  height: 160rpx;
  font-size: 25rpx;
  color: #a7a9aa;
  flex-direction: column;
  justify-content: space-between;
  text-align: center;
}
.pet-diary-page .diary-content-wrap .headings .heading image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  border: 6rpx solid transparent;
}
.pet-diary-page .diary-content-wrap .headings .current {
  color: #424242;
}
.pet-diary-page .diary-content-wrap .headings .current image {
  border: 6rpx solid #fdc67f;
}
.pet-diary-page .diary-content-wrap .diary-wrap-outter {
  height: 100%;
  position: fixed;
  top: 430rpx;
  left: 0;
  right: 0;
  overflow-y: scroll;
}
.pet-diary-page .diary-content-wrap .diary-wrap {
  height: 100%;
  background: #ffffff;
  border-radius: 40rpx 40rpx 0px 0px;
  margin-top: 60rpx;
}
.pet-diary-page .diary-content-wrap .diary-wrap .heads {
  left: 0;
  text-align: center;
}
.pet-diary-page .diary-content-wrap .diary-wrap .heads .head {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  margin-top: -45rpx;
  margin-bottom: 15rpx;
}
.pet-diary-page .diary-content-wrap .diary-wrap .heads .name {
  font-size: 46rpx;
  color: #424242;
  text-align: center;
}
.pet-diary-page .diary-content-wrap .diary-wrap .heads .name image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.pet-diary-page .diary-content-wrap .diary-wrap .diary-content {
  padding: 60rpx;
  background: #ffffff;
  padding-bottom: 250rpx;
}
.pet-diary-page .diary-content-wrap .diary-wrap .diary-content .diary .card {
  display: flex;
  justify-content: space-between;
  padding-bottom: 80rpx;
  position: relative;
}
.pet-diary-page .diary-content-wrap .diary-wrap .diary-content .diary .card .line {
  width: 0;
  height: 100%;
  border-left: 1rpx dashed #F0AF5A;
  position: absolute;
  left: 35rpx;
  top: 0;
}
.pet-diary-page .diary-content-wrap .diary-wrap .diary-content .diary .card .day {
  width: 70rpx;
  height: 85rpx;
  font-size: 39rpx;
  color: #b8bbbc;
  text-align: center;
  background: #fff;
  position: relative;
  z-index: 8;
}
.pet-diary-page .diary-content-wrap .diary-wrap .diary-content .diary .card .day .month {
  font-size: 22rpx;
}
.pet-diary-page .diary-content-wrap .diary-wrap .diary-content .diary .card .done {
  color: #424242;
}
.pet-diary-page .diary-content-wrap .diary-wrap .diary-content .diary .card .done .month {
  color: #979797;
}
.pet-diary-page .diary-content-wrap .diary-wrap .diary-content .diary .card .event {
  border-radius: 40rpx 40rpx 40rpx 0px;
  width: 530rpx;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
}
.pet-diary-page .diary-content-wrap .diary-wrap .diary-content .diary .card .event .time {
  font-size: 36rpx;
  color: #424242;
  margin-bottom: 10rpx;
}
.pet-diary-page .diary-content-wrap .diary-wrap .diary-content .diary .card .event .time image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.pet-diary-page .diary-content-wrap .diary-wrap .diary-content .diary .card .event .descs {
  font-size: 30rpx;
  color: #b8bbbc;
}
.pet-diary-page .diary-content-wrap .diary-wrap .diary-content .diary .card .event .descs .desc {
  line-height: 45rpx;
}
.pet-diary-page .diary-content-wrap .diary-wrap .diary-content .diary .card .event .doing {
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
