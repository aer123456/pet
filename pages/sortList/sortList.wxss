.sort-list-page {
  width: 100%;
  min-height: 100%;
}
.sort-list-page .left-nav-wrap {
  width: 109rpx;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  overflow-y: scroll;
  padding-right: 20rpx;
}
.sort-list-page .left-nav-wrap::-webkit-scrollbar {
  display: none;
}
.sort-list-page .left-nav-wrap .left-nav {
  width: 100%;
  height: 100%;
  background: #fef2e3;
  padding-top: 30rpx;
}
.sort-list-page .left-nav-wrap .left-nav .nav-item {
  width: 42rpx;
  margin: 30rpx 0 0 29rpx;
  padding-bottom: 30rpx;
  position: relative;
  font-size: 30rpx;
  color: #fdc67f;
  line-height: 32rpx;
}
.sort-list-page .left-nav-wrap .left-nav .nav-item image {
  width: 36rpx;
  height: 82rpx;
  position: absolute;
  left: 54rpx;
  top: 23rpx;
}
.sort-list-page .left-nav-wrap .left-nav .current-nav {
  color: #f0af5a;
}
.sort-list-page .right-content {
  width: 100%;
  padding-left: 170rpx;
  box-sizing: border-box;
}
.sort-list-page .right-content .card {
  border-radius: 20rpx 0 0 20rpx;
  padding: 20rpx 0 20rpx 20rpx;
  margin-top: 40rpx;
  display: flex;
}
.sort-list-page .right-content .card .card-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12px;
}
.sort-list-page .right-content .card .card-content {
  padding-left: 20rpx;
  flex: 1;
}
.sort-list-page .right-content .card .card-content .card-content-title {
  font-size: 32rpx;
  color: #424242;
  line-height: 45rpx;
}
.sort-list-page .right-content .card .card-content .card-content-desc {
  font-size: 24rpx;
  color: #b8bbbc;
  line-height: 33rpx;
  margin: 10rpx 0 14rpx 0;
}
.sort-list-page .right-content .card .card-content .card-content-price {
  font-size: 36rpx;
  color: #f0af5a;
  line-height: 50rpx;
}
.sort-list-page .right-content .card .card-content .card-content-price .red {
  color: #f05a5a;
}
.sort-list-page .right-content .card .card-content .card-content-price .discount {
  font-size: 24rpx;
  color: #b8bbbc;
  line-height: 33rpx;
  text-decoration: line-through;
}
.sort-list-page .right-content .card .card-content .card-content-price image {
  width: 126rpx;
  height: 42rpx;
  float: right;
  margin-top: 5rpx;
}
