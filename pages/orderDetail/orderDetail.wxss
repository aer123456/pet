.order-detail-page .wrap {
  padding: 60rpx 40rpx 0 60rpx;
}
.order-detail-page .wrap .order {
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
}
.order-detail-page .wrap .order .img {
  display: inline-block;
  position: relative;
  top: -20rpx;
  left: -23rpx;
  border-radius: 12px;
}
.order-detail-page .wrap .order .img image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
}
.order-detail-page .wrap .order .desc {
  flex: 1;
  color: #424242;
}
.order-detail-page .wrap .order .desc .names {
  padding-top: 36rpx;
  margin-bottom: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.order-detail-page .wrap .order .desc .status {
  font-size: 28rpx;
  color: #B8BBBC;
  margin-bottom: 8rpx;
}
.order-detail-page .title {
  padding: 40rpx;
  font-size: 36rpx;
  color: #333333;
}
.order-detail-page .order-detail {
  margin: 0 40rpx 40rpx;
  border-radius: 20rpx;
  padding: 0 30rpx 30rpx 30rpx;
}
.order-detail-page .order-detail .order-title {
  font-size: 36rpx;
  color: #333333;
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  align-items: center;
  margin-bottom: -35rpx;
}
.order-detail-page .order-detail .order-title image {
  width: 36rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
.order-detail-page .order-detail .gap {
  width: 100%;
  height: 2rpx;
  background: #f4f5f7;
  margin: 35rpx 0;
}
.order-detail-page .order-detail .pics {
  display: flex;
  flex-direction: row;
}
.order-detail-page .order-detail .pics image {
  width: 180rpx;
  height: 180rpx;
}
.order-detail-page .order-detail .pics .pics-desc {
  flex: 1;
  margin-left: 40rpx;
}
.order-detail-page .order-detail .pics .pics-desc .pic-title {
  font-size: 32rpx;
  color: #424242;
}
.order-detail-page .order-detail .pics .pics-desc .pic-desc {
  font-size: 24rpx;
  color: #B8BBBC;
  margin: 10rpx 0;
}
.order-detail-page .order-detail .pics .pics-desc .pic-price {
  font-size: 36rpx;
  color: #F0AF5A;
}
.order-detail-page .order-detail .texts {
  font-size: 30rpx;
  color: #424242;
}
.order-detail-page .order-detail .texts .text {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 50rpx;
}
.order-detail-page .order-detail .texts .gray {
  color: #B8BBBC;
}
.order-detail-page .order-detail .texts .orange {
  color: #F0AF5A;
  font-size: 36rpx;
}
.order-detail-page .contacts-wrap {
  padding: 0 40rpx;
}
.order-detail-page .contacts-wrap .contacts {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 94rpx;
  font-size: 28rpx;
  border-radius: 20rpx;
}
.order-detail-page .contacts-wrap .contacts .contact {
  flex: 1;
  text-align: center;
  height: 94rpx;
  line-height: 94rpx;
}
.order-detail-page .contacts-wrap .contacts .contact image {
  width: 40rpx;
  height: 38rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}
.order-detail-page .contacts-wrap .contacts .bordered {
  border-left: 1rpx solid #F4F5F7;
}
