          <view class="img">
            <image class="ig" src="{{color.img}}"  />
            <image wx:if="{{color.desc == '红色'}}" class="bg" src="http://stc.unipet-group.com/mini/icon/petDetail/colors.png"  />
          </view>
          <text>{{color.desc}}</text>
        </view>
