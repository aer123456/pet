      <view class="title">
        <text>小豆丁</text>
        <image src="http://stc.unipet-group.com/mini/my/sex1.png" />
      </view>
      <view class="birth">
        <image src="http://stc.unipet-group.com/mini/icon/petDetail/birth.png" />
        <text >猫咪生日：2020.5.1</text>
      </view>
      <view class="other">洗澡/洗澡容器/盆</view>
      <view class="marks">
        <text>商品标签</text>
        <text>商品标签</text>
        <text>商品标签</text>
      </view>
      <view class="price">
        <text>￥3,500</text>
